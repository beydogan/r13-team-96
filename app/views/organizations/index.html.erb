<div class="page-header">
  <h1 class="pull-left">Your Organizations</h1>
  <div class="pull-right toolbar">

    <%= button_group do %>
        <%= bs_button_to "", new_organization_path, tooltip: "New Organization", icon: "plus", style: "primary" %>
    <% end %>
  </div>
  <div class="clearfix"></div>
</div>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th># of members</th>
    <th class="span1"></th>
    <th class="span1"></th>
    <th class="span1"></th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.name %></td>
    <td><%= link_to organization.website, organization.website %></td>
    <td><%= organization.users.count %></td>
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
    <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
